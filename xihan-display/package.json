{
  "name": "xihan-display",
  "private": false,
  "version": "0.3.6",
  "type": "module",
  "description": "Xihan frontend project. A fast, lightweight, efficient, and dedicated development framework and new decentralized full scenario application software. Built based on DotNet and Vue.",
  "author": {
    "name": "ZhaiFanhua",
    "email": "zhaifanhua@foxmail.com",
    "url": "https://github.com/XiHanFun/XiHan.Display"
  },
  "license": "MulanPSL-2.0",
  "homepage": "https://docs.xihan.fun",
  "repository": {
    "url": "https://github.com/XiHanFun/XiHan.Display.git"
  },
  "bugs": {
    "url": "https://github.com/XiHanFun/XiHan.Display/issues"
  },
  "keywords": [
    "Vue",
    "Vite",
    "TypeScript",
    "NaiveUI",
    "XiHan",
    "XiHanFun"
  ],
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "vite --host",
    "serve": "vite serve --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "update-pkg": "ncu --deep -u",
    "clean:all": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules",
    "clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
    "clean:lib": "rimraf node_modules",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "reinstall": " npm run clean:all&& npm run bootstrap",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "axios": "^1.6.1",
    "pinia": "^2.1.7",
    "naive-ui": "^2.35.0",
    "vfonts": "^0.0.3",
    "echarts": "^5.4.3",
    "nprogress": "^0.2.0",
    "qrcode": "^1.5.3",
    "@microsoft/signalr": "^7.0.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vue-tsc": "^1.8.22",
    "@rushstack/eslint-patch": "^1.5.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.5",
    "@types/node": "^20.9.0",
    "@typescript-eslint/utils": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vicons/ionicons4": "^0.12.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3",
    "unplugin-auto-import": "^0.16.7",
    "unplugin-vue-components": "^0.25.2",
    "vitest": "^0.34.6",
    "vue-eslint-parser": "^9.3.2"
  },
  "packageManager": "pnpm@8.1.0"
}
